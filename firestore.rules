rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow read and write access to authenticated users for the Messages collection
    match /Messages/{messageId} {
      allow read, write: if request.auth != null;
    }

    // Allow read and write access to authenticated users for the Reports collection
    match /Reports/{reportId} {
      allow read, write: if request.auth != null;
    }

    // Allow read access to authenticated users for the Users collection
    match /Users/{userId} {
      allow read: if request.auth != null;
    }

    // Allow read access to authenticated users for the Listings collection
    match /Listings/{listingId} {
      allow read: if request.auth != null;
    }

    // Add other collection rules as needed
  }
}
